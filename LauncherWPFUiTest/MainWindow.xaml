<Window x:Class="LauncherWPFUiTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPFUiTest"
        xmlns:vm="clr-namespace:LauncherWPFUiTest.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="562.5"
        Width="1000"
        Background="Transparent"
        ResizeMode="NoResize">
    <!--xmlns:b="http://schemas.microsoft.com/xaml/behaviors"-->
    <Window.Resources>
        <!-- 부드러운 애니메이션을 위한 EasingFunction -->
        <QuadraticEase x:Key="EaseOut"
                       EasingMode="EaseOut" />

        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />

    </Window.Resources>

    <Grid>
        <Border>
            <Border.Background>
                <!--<ImageBrush ImageSource="/Images/asdfsadfsadf.png" />-->

                <SolidColorBrush Color="#15171E" />
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Border CornerRadius="5"
                            Background="#10FFFFFF"
                            Margin="20">

                        <StackPanel VerticalAlignment="Center">
                            <ItemsControl ItemsSource="{Binding Programs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource menuButton}"
                                                Command="{Binding DataContext.SelectProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Vertical">
                                                <Image Source="{Binding IconSource}" />
                                                <TextBlock Text="{Binding ProgramName}"
                                                           FontSize="12" />
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </Border>
                </Grid>
                <DockPanel Grid.Row="1"
                           Grid.Column="0"
                           Background="Transparent"
                           Width="200"
                           HorizontalAlignment="Left"
                           Margin="15 0 0 0">
                    <Image DockPanel.Dock="Top"
                           Margin="10 10 0 0"
                           Source="Images/Resize image project.png"></Image>
                    <Button Style="{StaticResource BtnContent}"
                            Content="런처 샵"
                            Click="Button_Click" />
                    <Button Style="{StaticResource BtnContent}"
                            Content="토론장"
                            Click="Button_Click" />
                    <Button  Style="{StaticResource BtnContent}"
                             Content="패치노트"
                             Click="Button_Click" />
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Button DockPanel.Dock="Bottom"
                                Grid.Row="1"
                                Height="50"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Margin="0 10 0 40"
                                Width="160"
                                Background="#0074E0"
                                Foreground="White"
                                Content="{Binding ButtonContent}"
                                Style="{StaticResource startbtn}"
                                Command="{Binding LaunchProgramCommand}">
                        </Button>

                        <Button x:Name="setting"
                                DockPanel.Dock="Bottom"
                                HorizontalAlignment="Right"
                                Grid.Row="1"
                                Width="50"
                                Height="50"
                                Margin="20 10 0 40"
                                Style="{StaticResource settingbutton}"
                                Background="#0074E0"
                                Foreground="White"
                                VerticalAlignment="Bottom">
                            <StackPanel>
                                <Image Source="Images/icons8-settings-50.png"
                                       Width=" 30" />
                            </StackPanel>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Settings"
                                              Click="Button_Click" />
                                    <MenuItem Header="Delete"
                                              Command="{Binding DeleteProgramCommand}"
                                              IsEnabled="{Binding Flag}" />
                                    <MenuItem Header="리페어"
                                              Command="{Binding RepairProgramCommand }" />
                                    <MenuItem Header="설정백업"
                                              Command="{Binding backupCommand}" />

                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <ProgressBar x:Name="progressBar"
                                     Grid.Row="1"
                                     DockPanel.Dock="Bottom"
                                     Height="20"
                                     VerticalAlignment="Bottom"
                                     Margin="0 10 0 10"
                                     Value="{Binding ProgressBarValue}"
                                     Maximum="100"
                                     Visibility="{Binding ProgressBarVisibility, Converter={StaticResource boolToVisibilityConverter}}" />

                    </Grid>
                    <ComboBox Grid.Row="0"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding SelectedProgram.Versions}"
                              SelectedItem="{Binding SelectedVersion}"
                              DisplayMemberPath="Number"
                              DockPanel.Dock="Bottom"
                              Height="30"
                              VerticalAlignment="Bottom"
                              Margin="  0"
                              FontSize="20"
                              FontFamily="pack://application:,,,/Font/NanumGothic.ttf">

                    </ComboBox>

                </DockPanel>

                    <StackPanel Grid.Row="1"
                            HorizontalAlignment="Right"
                            Margin="0 0 20 20"
                            
                                >
                    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Hidden"
                                  CanContentScroll="True"
                                
                                  MaxHeight="400">
                        <StackPanel>
                        <Border CornerRadius="8,8,8,8"
                            ClipToBounds="True"
                            Width="600"
                            Height="200">
                        <Border.Background>
                            <ImageBrush Stretch="Fill"
                                        ImageSource="Images/2075.jpg" />
                        </Border.Background>
                        <Border.OpacityMask>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="0,1">
                                <GradientStop Offset="0.2"
                                              Color="#000000" />
                                <GradientStop Offset="1"
                                              Color="#00000000" />
                            </LinearGradientBrush>
                        </Border.OpacityMask>
                            
                    </Border>

                        <TextBlock Grid.Row="1"
                               HorizontalAlignment="Right"
                               Background="Transparent"
                               Foreground="DarkGray"
                               Text="{Binding PatchNote}"
                               FontFamily="pack://application:,,,/Font/NanumGothic.ttf"
                               FontWeight="Bold"
                               FontSize="16"
                               Width="600"
                               Margin="10"
                               LineHeight="30"
                      
                               
                              >
                               
                    </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</Window>
