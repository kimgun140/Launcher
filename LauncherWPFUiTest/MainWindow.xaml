<Window x:Class="LauncherWPFUiTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPFUiTest"
        xmlns:vm="clr-namespace:LauncherWPFUiTest.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="562.5"
        Width="1000"
        Background="Transparent"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- 부드러운 애니메이션을 위한 EasingFunction -->
        <QuadraticEase x:Key="EaseOut"
                       EasingMode="EaseOut" />
    </Window.Resources>

    <Grid>
        <Border>
            <Border.Background>
                <SolidColorBrush Color="#15171E" />
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <ItemsControl ItemsSource="{Binding Programs}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource menuButton}"
                                        Command="{Binding DataContext.SelectProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding IconSource}"
                                               Height="60"
                                               Width="60"
                                               Margin="5" />
                                        <TextBlock Text="{Binding ProgramName}"
                                                   FontSize="12" />
                                    </StackPanel>
                                </Button>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button HorizontalAlignment="Right"
                            Style="{StaticResource menuButton}"
                            Width="100">
                        <Grid>
                            <Ellipse Fill="#282B32"
                                     Width="50"
                                     Height="48" />
                            <Image Source="/images/usericon2.png"
                                   Width="90"
                                   Height="60">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,25"
                                                     RadiusX="90"
                                                     RadiusY="90" />
                                </Image.Clip>

                            </Image>
                        </Grid>
                    </Button>
                </Grid>
                <DockPanel Grid.Row="1"
                           Grid.Column="0"
                           Background="Transparent"
                           Width="200"
                           HorizontalAlignment="Left">
                    <Image DockPanel.Dock="Top"
                           Margin="5 10 0 0"
                           Source="Images/logologo.png"></Image>
                    <Button Style="{StaticResource BtnContent}"
                            Content="스타크래프트 샵" />
                    <Button Style="{StaticResource BtnContent}"
                            Content="토론장" />
                    <Button  Style="{StaticResource BtnContent}"
                             Content="패치노트" />
                    <Grid DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Button DockPanel.Dock="Bottom"
                                Grid.Row="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Margin="5 10 0 10"
                                Width="150"
                                Background="#0074E0"
                                Foreground="White"
                                Content="{Binding ButtonContent}"
                                Style="{StaticResource startbtn}"
                                Command="{Binding LaunchProgramCommand}">
                        </Button>
                        <Button x:Name="setting"
                                DockPanel.Dock="Bottom"
                                HorizontalAlignment="Right"
                                Grid.Row="1"
                                Width="50"
                                Height="60"
                                Margin="0 10 0 10"
                                Style="{StaticResource startbtn}"
                                Background="#0074E0"
                                Foreground="White"
                                VerticalAlignment="Bottom"
                                Content="삭제"
                                Command="{Binding DeleteProgramCommand}"
                                ></Button>

                        <ComboBox Grid.Row="0"
                                  ItemsSource="{Binding SelectedProgram.Versions}"
                                  SelectedItem="{Binding SelectedVersion}"
                                  DisplayMemberPath="Number"
                                  DockPanel.Dock="Bottom"
                                  Height="30"
                                  VerticalAlignment="Bottom"
                                  Margin="10 10 10 0"
                                  FontFamily="pack://application:,,,/Font/NanumGothic.ttf">

                        </ComboBox>
                    </Grid>
                </DockPanel>
                <TextBlock Grid.Row="1"
                           HorizontalAlignment="Right"
                           Background="Transparent"
                           Foreground="White"
                           Text="{Binding PatchNote}"
                           Width="600"
                           Margin="10"
                           ScrollViewer.VerticalScrollBarVisibility="Hidden"
                           ScrollViewer.HorizontalScrollBarVisibility="Hidden">

                </TextBlock>
            </Grid>

        </Border>
    </Grid>
</Window>
