<Window x:Class="LauncherWPFUiTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherWPFUiTest"
        mc:Ignorable="d"
        Title="Window1"
        Height="450"
        Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <!-- XML 파일에서 프로그램 목록을 읽어옴 -->
        <StackPanel Orientation="Horizontal"
                    Margin="10">
           
        </StackPanel>

        <!--목록-->

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Height="80"
                    HorizontalAlignment="Center" />
        
        <ItemsControl ItemsSource="{Binding Programs}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource menuButton}"
                            Command="{Binding DataContext.SelectProgramCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}">
                        <StackPanel Orientation="Vertical">
                            <Image Source="{Binding IconSource}"
                                   Height="60"
                                   Width="60"
                                   Margin="5" />
                            <TextBlock Text="{Binding ProgramName}"
                                       FontSize="12" />
                        </StackPanel>
                    </Button>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ComboBox ItemsSource="{Binding SelectedProgram.Versions}"
                  DisplayMemberPath="Number"
                  SelectedItem="{Binding SelectedVersion}"
                  Height="20"
                  Width="100" />
        <Button Content="삭제"
                Command="{Binding DeleteProgramCommand}"
                IsEnabled="{Binding Flag}"
                Width="50" Height="50"
                HorizontalAlignment="Right"
                />
        <TextBlock Grid.Row="1"
                 Text="{Binding PatchNote}"
                 Height="100"
                 Width="300" />

        <Button Grid.Row="1" Height="100" Width="100" HorizontalAlignment="Left"
                Command="{Binding LaunchProgramCommand}"
                Content="{Binding ButtonContent}"
               
                
                ></Button>
        <ProgressBar x:Name="progressBar"
                     Grid.Column="1"
                     Grid.Row="1"
                     Value="{Binding ProgressBarValue}"/>
        <TextBlock Grid.Column="2"
                   Grid.Row="2"
                   FontSize="25"
                   Text="{Binding LoadDataValue}"
                   />
        <TextBlock Grid.Row="2"
                   FontSize="25"
                   
                   Text="{Binding LoadDataMax}" />
    </Grid>

</Window>
